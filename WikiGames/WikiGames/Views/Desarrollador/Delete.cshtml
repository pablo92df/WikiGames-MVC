@model WikiGames.Models.ViewModel.DesarrolladoresViewModel.DesarrolladorViewModel
@{
    ViewData["Title"] = "Delete Desarrollador";
}

<h3 class="mb-3">Estas Seguro de borrar la Desarrolladora @Model.DesarrolladorName?</h3>
<img class="imgLogo" src="@Model.ImgDesarrolladores.ImagePath"/>
<form asp-action="DeleteDesarrolladora">
    <input type="hidden" asp-for="DesarrolladorId"/>
    <button type="submit" class="btn btn-danger">Borrar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

