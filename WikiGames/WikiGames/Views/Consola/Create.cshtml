@model WikiGames.Models.DTO.Consola.ConsolaCreacionDTO
@{
	ViewData["Title"] = "Cargar Nueva Consola";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

	<div class="row">
		<div class="col-sm-12">
			<h3>Crear Productos</h3>
		</div>
		
	</div>

	<div class="row">
		<div class="col-sm-10">
			<form method="post" asp-action="Create">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group">
					<label asp-for="ConsolaName" class="control-label"></label>
					<input asp-for="ConsolaName" class="form-control" />
					<span asp-validation-for="ConsolaName" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label class="control-label">Marcas</label>
					<select name="MarcaId" class="form-control" asp-items="ViewBag.Marcas"></select>
				</div>
				<div class="form-group">
					<label asp-for="Descripcion" class="control-label"></label>
					<input asp-for="Descripcion" class="form-control" />
					<span asp-validation-for="Descripcion" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="FechaLanzamiento" class="control-label"></label>
					<input asp-for="FechaLanzamiento" type="datetime" class="form-control" />
					<span asp-validation-for="FechaLanzamiento" class="text-danger"></span>
				</div>

				<div class="form-group">
					<input type="submit" value="Crear Producto" class="btn btn-primary" />
				</div>
			</form>
		</div>
	</div>
</div>
@*Validacion lado cliente*@
	@section Scripts{

			@{ <partial name="_ValidationScriptsPartial" />
		}
}
