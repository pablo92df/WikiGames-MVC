    @section Scripts{

        @{
            @*<partial name="_ValidationScriptsPartial" />*@

            <script>

                let inputImg = document.getElementById('file');
                inputImg.addEventListener("change", function() {
                    var image = document.getElementById('output');
                    image.src = URL.createObjectURL(event.target.files[0]);
                });

                let descontinuacion = document.getElementById('descontinuacion');

                descontinuacion.addEventListener('change', function() {

                    if (!verificarFechaDescontinuacion()) {
                        document.getElementById('spanDescontinuacion').innerHTML = "Descontinuacion tiene que ser mayor a fecha lanzamiento";
                        return;
                    }

                    document.getElementById('spanDescontinuacion').innerHTML = "";


                });

                function verificarFechaDescontinuacion() {

                    let fechaLanza = document.getElementById('fechaLanzamiento').value;
                    let descont = document.getElementById('descontinuacion').value;

                    if (descont < fechaLanza) {
                        return false;
                    } else {
                        return true;

                    }
                };

                let marcaSelect = document.getElementById('marcas');

                marcaSelect.addEventListener('change', function() {
                    if (!marcaValue()) {

                        let text = "Seleccione marca";
                        document.getElementById('spanMarcas').innerHTML = text;
                        return;
                    }
                    document.getElementById('spanMarcas').innerHTML = "";
                });

                function marcaValue() {
                    let marca = document.getElementById('marcas').value;
                    if (marca > 0) {

                        return true;
                    }
                    let text = "Seleccione marca";
                    document.getElementById('spanMarcas').innerHTML = text;
                    return false;
                }


                let consolaName = document.getElementById('consolaName');

                consolaName.addEventListener('change', function() {
                    checkName();
                })



                let btnCrear = document.getElementById('btnCrearConsola');

                btnCrear.addEventListener('click', function() {


                    if (checkName()) {

                    }
                    if (!marcaValue() && !verificarFechaDescontinuacion() && fechaLanzamiento()) {


                    }


                });

                function fechaLanzamiento() {

                    let fecha = $("#fechaLanzamiento").val();
                    if (fecha) {
                        return true;
                    }
                    else
                        return false;

                }

                function checkName() {

                    let name = document.getElementById('consolaName').value;

                    if (name.length == 0) {
                        document.getElementById('spanName').innerHTML = "Es necesario completar el campo nombre";
                        return false;
                    }
                    document.getElementById('spanName').innerHTML = "";
                }


            </script>
        }
    }
