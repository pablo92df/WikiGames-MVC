@model IEnumerable<WikiGames.Models.DTO.Consola.ConsolaDTO>

@{
	ViewData["Title"] = "Lista de Consolas";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
	@if (TempData["mensaje"] != null)
	{ 
		<div class="alert alert-warning alert-dismissible fade show" role="alert">
			@TempData["mensaje"]
			<button type="button" class="close" data-dismiss="alert" arial-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
	}
	<div class="row">
		<div class="col-sm-6">
			<h3>Lista de Generos</h3>
		</div>
		<div class="col-sm-6">
			<a class="btn btn-success d-block" asp-action="Create" asp-controller="Consola">Agregar nueva Consola</a>
		</div>
	</div>

	<div class="row">
		@if (Model.Count() > 0)
		{
		
				@foreach(var item in Model)
				{
					<div class="card" style="width: 18rem;">
					  <img src="..." class="card-img-top" alt="...">
					  <div class="card-body">
						<p class="card-text">@item.Marca.MarcaName</p>
						<p class="card-text">@item.ConsolaName</p>
						<a asp-controller="Consola" asp-action="Edit" asp-route-id="@item.ConsolaId" class="btn btn-warning">Editar</a>
						<a asp-controller="Consola" asp-action="Delete" asp-route-id="@item.ConsolaId" class="btn btn-warning">Delete</a>

					  </div>
					</div>
				}
	
		
