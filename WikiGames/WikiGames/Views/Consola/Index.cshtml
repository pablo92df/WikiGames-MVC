@model IEnumerable<WikiGames.Models.ViewModel.ConsolaViewModel.ConsolaViewModel>



@{
	ViewData["Title"] = "Lista de Consolas";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
	@if (TempData["mensaje"] != null)
	{ 
		<div class="alert alert-warning alert-dismissible fade show" role="alert">
			@TempData["mensaje"]
			<button type="button" class="close" data-dismiss="alert" arial-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
	}
	<div class="row">
		<div class="col-sm-6">
			<h3>Lista de Consolas</h3>
		</div>
		<div class="col-sm-6">
			<a class="btn btn-success d-block" asp-action="Create" asp-controller="Consola">Agregar nueva Consola</a>
		</div>
	</div>
	<div class="album py-5 bg-light">
		@if (Model.Count() > 0)
		{
			<div class="container">
				<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
					@foreach(var item in Model)
					{
						<div class="col cardConsola">
							<div class="card shadow-sm">
								<img class="bd-placeholder-img imgConsolaCard" src="@item.imgConsolas.ImagePath"/>
								<div class="card-body">
									<p class="card-text">@item.Marca.MarcaName</p>
									<p class="card-text">@item.ConsolaName</p>
									<div class="d-flex justify-content-between align-items-center">
										<div class="btn-group">
											<a asp-controller="Consola" asp-action="Edit" asp-route-id="@item.ConsolaId" class="btn btn-sm btn-outline-secondary">Editar</a>
											<a asp-controller="Consola" asp-action="AllInfo" asp-route-id="@item.ConsolaId" class="btn btn-sm btn-outline-secondary">all info</a>
											<a asp-controller="Consola" asp-action="Delete" asp-route-id="@item.ConsolaId" class="btn btn-sm btn-outline-secondary">Delete</a>
										</div>
									</div>
								</div>
							</div>
						</div>
					}
				</div>
			</div>
		}
		else
		{
			<p>No hay registros</p>
		}
    </div>
</div>
