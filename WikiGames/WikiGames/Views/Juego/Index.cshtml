@model IEnumerable<WikiGames.Models.Entities.Juego>

@{
	ViewData["Title"] = "Lista de Juegos";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
	@if (TempData["mensaje"] != null)
	{ 
		<div class="alert alert-warning alert-dismissible fade show" role="alert">
			@TempData["mensaje"]
			<button type="button" class="close" data-dismiss="alert" arial-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
	}
	<div class="row">
		<div class="col-sm-6">
			<h3>Lista de Juegos</h3>
		</div>
		<div class="col-sm-6">
			<a class="btn btn-success d-block" asp-action="Create" asp-controller="Juego">Agregar nuevo Juego</a>
		</div>
	</div>
	<div class="row">
		<form>

		
			<div class="col-md-3">
				<label  class="control-label">Juego</label>
				<input  class="form-control" id="juegoName"/>
			</div>
			<div class="col-md-3">
				<label class="control-label">Desarrolladora</label>
				@*<select name="DesarrolladorId" class="form-select" asp-items="@ViewBag.Desarrollador" id="desarrollador"></select>*@
					@Html.DropDownList("DesarrolladorId", (SelectList)ViewBag.Desarrolladores, "Please select", new { @class = "form-control" })
			</div>
			<div class="col-md-3">
				<label class="control-label">Publicadora</label>
				<select name="PublicadoraId" class="form-select" asp-items="ViewBag.Publicadora" id="publicadora"></select>
			</div>
			<div class="col-md-3">
				<label class="control-label">Generos</label>
				<select name="GeneroId" class="form-select" asp-items="ViewBag.Generos" id="generos"></select>
			</div>
			<div class="col-md-3">
				<label class="control-label">Modos de juego</label>
				<select name="ModoJuegoId" class="form-select" asp-items="ViewBag.ModoJuegos" id="modoJuegos"></select>
			</div>
			<div class="col-md-3" >
				<label class="control-label">Consola</label>
				<select name="ConsolaId" class="form-select" id="consolaName"asp-items="ViewBag.Consolas"></select>
			</div>
			<div class="col-md-3" >
				<a asp-controller="Juego" asp-action="Index" class="btn btn-warning">Mas info</a>
			</div>
		</form>
	</div>

	<div class="row">
		@if (Model.Count() > 0)
		{
			
			<table class="table table-bordered table-striped">
				<thead>
					<tr>
						<td>Nombre</td>
						<td>Lanzamiento</td>
						<td>Desarrollador</td>
						<td>Publicador</td>
						<td>Acciones</td>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.JuegoName</td>
							<td>@item.FechaLanzamientoOficial</td>
							<td>@item.Desarrolladora.DesarrolladorName</td>
							<td>@item.Publicadora.PublicadoraNombre</td>

							<td>
								<a asp-controller="Juego" asp-action="AllInfo" asp-route-id="@item.JuegoId" class="btn btn-warning">Mas info</a>
						
							</td>
						</tr>
					}
				</tbody>
			</table>
		}
		else
		{
			<p>No hay registros</p>
		}
	</div>
</div>
