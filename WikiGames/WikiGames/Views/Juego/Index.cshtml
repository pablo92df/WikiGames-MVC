@model IEnumerable<WikiGames.Models.Entities.Juego>

@{
	ViewData["Title"] = "Lista de Juegos";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
	@if (TempData["mensaje"] != null)
	{ 
		<div class="alert alert-warning alert-dismissible fade show" role="alert">
			@TempData["mensaje"]
			<button type="button" class="close" data-dismiss="alert" arial-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
	}
	<div class="row">
		<div class="col-sm-6">
			<h3>Lista de Juegos</h3>
		</div>
		@*<div class="col-sm-6">
			<a class="btn btn-success d-block" asp-action="Create" asp-controller="Productos">Agregar nuevo producto</a>
		</div>*@
	</div>

	<div class="row">
		@if (Model.Count() > 0)
		{
			
			<table class="table table-bordered table-striped">
				<thead>
					<tr>
						<td>Nombre</td>
						<td>Lanzamiento</td>
						<td>Desarrollador</td>
						<td>Acciones</td>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<td>@item.JuegoName</td>
							<td>@item.FechaLanzamientoOficial</td>
							<td>@item.Desarrolladora</td>
							@*<td>
								<a asp-controller="Productos" asp-action="Edit" asp-route-id="@item.idProducto" class="btn btn-warning">Editar</a>
								<a asp-controller="Productos" asp-action="Delete" asp-route-id="@item.idProducto" class="btn btn-warning">Delete</a>

							</td>*@
						</tr>
					}
				</tbody>
			</table>
		}
		else
		{
			<p>No hay registros</p>
		}
	</div>
</div>
