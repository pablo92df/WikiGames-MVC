@model WikiGames.Models.ViewModel.JuegViewModel.JuegoCreacionViewModel
@{
    ViewData["Title"] = "Cargar Nuevo Juego";
	Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">

	<div class="row">
		<div class="col-sm-12">
			<h3>Crear Juego</h3>
		</div>
	</div>
	<div class="row">
		<div  class="col-md-5">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="JuegoName" class="control-label"></label>
				<input asp-for="JuegoName" class="form-control" id="juegoName"/>
				<span asp-validation-for="JuegoName" class="text-danger" ></span>
			</div>
			<div class="form-group">
				<label asp-for="FechaLanzamientoOficial" class="control-label"></label>
				<input asp-for="FechaLanzamientoOficial" type="date" class="form-control" id="fechaOficial"/>
				<span asp-validation-for="FechaLanzamientoOficial"  class="text-danger" ></span>
			</div>
			<div class="form-group">

				<label class="control-label">Desarrolladora</label>
				@Html.DropDownList("desarrollador", (SelectList)ViewBag.Desarrolladores, "Please select", new { @class = "form-control" })

			</div>
			<div class="form-group">
				<label class="control-label">Publicadora</label>
				@Html.DropDownList("Publicadora", (SelectList)ViewBag.Publicadora, "Please select", new { @class = "form-control"})
			</div>
			<div class="form-group">
				<label class="control-label">Generos</label>
				@Html.DropDownList("generos", (SelectList)ViewBag.Generos, "Please select", new { @class = "form-control"})
			</div>
			<div class="generosSeleccionados" id="generosSeleccionados">

			</div>
			<div class="form-group">
				<label class="control-label">Modo de juego</label>
				@Html.DropDownList("ModoDeJuegoId", (SelectList)ViewBag.ModoJuegos, "Please select", new { @class = "form-control" })
			</div>
			<div class="ModoDeJuegoSeleccionados" id="ModoDeJuegoSeleccionados">

			</div>
			<div class="modoJuego" id="modoJuego">
			</div>
		</div>
		<div class="col-md-5">
			<div >
				<label class="form-label">Consola</label>
				<select name="ConsolaId" class="form-select" id="consolaName"asp-items="ViewBag.Consolas"></select>
			</div>
			<div >
				<label class="form-label">Fecha Lanzamiento</label>
				<input type="date" class="form-control" id="fechaLanzamiento"/>
			</div>
			<div >
				<label class="form-label">Ventas</label>
				<input type="number" class="form-control" id="ventas"/>
			</div>
			<div >
				<button class="btn-primary btnAgregar" id="btnAgregar">Agregar</button>
			</div>
			<table class="table table-striped" id="tableConsolas">
				<thead>
					<tr>
						<th scope="col">Consola</th>
						<th scope="col">Fecha Lanzamiento</th>
						<th scope="col">Copias Vendidas Hasta La fecha</th>
					</tr>
				</thead>
				<tbody class="tBody" id="tBody">
				</tbody>
			</table>
		</div>
	</div>
	<div class="row">
		<div class="form-group">
			<label  class="control-label">Decripcion</label>
			<textarea  class="form-control" rows="4" id="descripcion"></textarea>
			
		</div>
		<div class="form-group">
			<label  class="control-label">Argumento</label>
			<textarea   class="form-control" rows="4" id="argumento"></textarea>
			
		</div>
		<div class="form-group">
				<input type="submit" value="Continuar" id="crearJuego" class="btn btn-primary" />
		</div>
	</div>

</div>
@*Validacion lado cliente*@
	@section Scripts{

			@{ <partial name="_ValidationScriptsPartial" />
		}
}
