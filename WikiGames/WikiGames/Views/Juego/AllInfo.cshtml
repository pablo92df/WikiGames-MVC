@model WikiGames.Models.ViewModel.JuegoViewModel.JuegoAllInfoViewModel

@{
	ViewData["Title"] = "Lista de Juegos";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
	@if (TempData["mensaje"] != null)
	{ 
		<div class="alert alert-warning alert-dismissible fade show" role="alert">
			@TempData["mensaje"]
			<button type="button" class="close" data-dismiss="alert" arial-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
	}
	@if(Model != null)
	{
			
	<h2>@Model.JuegoName</h2>
	<div class="mw-parser-output">
		<div class="row">
			<div class="col-sm-6">
				<article>@Model.Descripcion</article>
			</div>
		
			<div class="col-sm-5">
				<table class="Infobox" cellpadding="2" cellspacing="2" align="right" width="240px" style="font-family: verdana, sans-serif; padding: 4px; margin: 0 0 1em 1em; font-size: 10px; background-color: none; border:1px solid black;">
					<tbody>
						<tr>
							<td align="center" colspan="2" bgcolor="gold" style="font-size:110%;"><i><b>@Model.JuegoName</b></i>
							</td>
						</tr>
						<tr>
							<td colspan="2" style="text-align: center;"><a href="https://static.wikia.nocookie.net/hitman/images/1/13/HitmanCodename47.jpg/revision/latest?cb=20101119210705&amp;path-prefix=es" class="image"><img alt="HitmanCodename47.jpg" src="https://static.wikia.nocookie.net/hitman/images/1/13/HitmanCodename47.jpg/revision/latest/scale-to-width-down/170?cb=20101119210705&amp;path-prefix=es" decoding="async" width="170" height="200" data-image-name="HitmanCodename47.jpg" data-image-key="HitmanCodename47.jpg"></a>
							</td>
						</tr>
						<tr class="">
							<th style="background-color: gold;">Desarrollador</th>
							<td>
								<a href="/es/wiki/IO_Interactive" title="">@Model.Desarrolladora.DesarrolladorName</a>
							</td>
						</tr>
						<tr class="hiddenStructure{{{Distribuidor}}}">
							<th style="background-color: gold;">Distribuidor</th>
							<td>
								<a href="/es/wiki/Eidos_Interactive" title="">@Model.Publicadora.PublicadoraNombre</a>
							</td>
						</tr>
						<tr class="hiddenStructure{{{Lanzamiento}}}">
							<th style="background-color: gold;">Fecha de lanzamiento</th>
							<td>@Model.FechaLanzamientoOficial
							</td>
						</tr>
						<tr class="hiddenStructure{{{Género}}}">
							<th style="background-color: gold;">Género</th>
							<td>
								<ul>
								@foreach (var item in Model.Generos)
								{
										<li>@item.Nombre</li>
								}
								</ul>
							</td>
						</tr>
							<tr class="hiddenStructure{{{Protagonista}}}">
							<th style="background-color: gold;">Protagonista</th>
							<td><a href="/es/wiki/Agente_47" title="Agente 47">Agente 47</a></td>
						</tr>
							<tr class="hiddenStructure{{{Plataformas}}}">
							<th style="background-color: gold;">Plataformas</th>
							<td>
								<ul>
								@foreach (var item in Model.JuegoConsola)
								{
										<li>@item.Consola.ConsolaName</li>
								}
								</ul>
							</td>
						</tr>
						@*<tr class="hiddenStructure{{{Clasificación}}}">
						<th style="background-color: gold;">Clasificación
						</th>
						<td>ESRB: Mature (17+)
						</td></tr>*@
					</tbody>
				</table>
			</div>
		</div>
	</div>
	<div class="row">
		<h3>Lanzamiento en Consolas</h3>
		@if (Model.JuegoConsola.Count() > 0)
		{

			<table class="table table-bordered table-striped" id="tablaJuegos">
				<thead>
					<tr>
						<td>Marca</td>
						<td>Modelo</td>
						<td>Lanzamiento</td>
						<td>Ventas</td>
					</tr>
				</thead>
				<tbody>
					@foreach (var item in Model.JuegoConsola)
					{
						<tr>
							<td>@item.Consola.Marca.MarcaName</td>
							<td>@item.Consola.ConsolaName</td>
							<td>@item.FechaLanzamiento</td>
							<td>@item.CopiasVendidas</td>
						</tr>
					}
				</tbody>
			</table>
		}
		else
		{
			<p>No hay registros</p>
		}
	</div>
	
	}
	
</div>
