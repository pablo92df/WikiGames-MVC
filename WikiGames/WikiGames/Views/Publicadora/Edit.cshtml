@model WikiGames.Models.ViewModel.PublicadoraViewModel.PublicadoraEditViewModel
@{
    ViewData["Title"] = "Edit Publicadora";
}


<div class="container">

	<div class="row">
		<div class="col-sm-12">
			<h3>Editar Publicadora</h3>
		</div>
		
	</div>

	<div class="row">
		<div class="col-sm-10">
			<form method="post" asp-action="Edit" enctype = "multipart/form-data">
				<input type="hidden" asp-for="PublicadoraId"/>
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group">
					<label asp-for="PublicadoraNombre" class="control-label"></label>
					<input asp-for="PublicadoraNombre" class="form-control" />
					<span asp-validation-for="PublicadoraNombre" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Fundacion" class="control-label"></label>
					<input asp-for="Fundacion" type="date" class="form-control" />
					<span asp-validation-for="Fundacion" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Historia" class="control-label"></label>
					<textarea rows="10" asp-for="Historia" class="form-control"></textarea>
					<span asp-validation-for="Historia" class="text-danger"></span>
				</div>

				<div class="form-group">
					<input type="submit" value="Editar Publicadora" class="btn btn-primary" />
				</div>
			</form>
		</div>
	</div>
</div>
@*Validacion lado cliente*@
	@section Scripts{

			@{ <partial name="_ValidationScriptsPartial" />
		}
}
