@model WikiGames.Models.Entities.Publicadora
@{
    ViewData["Title"] = "Delete Publicadora";
}

<h3 class="mb-3">Estas Seguro de borrar la publicadora @Model.PublicadoraNombre?</h3>
<form asp-action="DeletePublicadora">
    <input type="hidden" asp-for="PublicadoraId"/>
    <button type="submit" class="btn btn-danger">Borrar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>
