@model WikiGames.Models.Entities.Publicadora
@{
	ViewData["Title"] = "Crear Nuev Publicadora";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

	<div class="row">
		<div class="col-sm-12">
			<h3>Crear Publicadora</h3>
		</div>
		
	</div>

	<div class="row">
		<div class="col-sm-10">
			<form method="post" asp-action="Create" enctype = "multipart/form-data">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group">
					<label asp-for="PublicadoraNombre" class="control-label"></label>
					<input asp-for="PublicadoraNombre" class="form-control" />
					<span asp-validation-for="PublicadoraNombre" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Fundacion" class="control-label"></label>
					<input asp-for="Fundacion" type="date" class="form-control" />
					<span asp-validation-for="Fundacion" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Historia" class="control-label"></label>
					<textarea rows="4" asp-for="Historia" class="form-control"></textarea>
					<span asp-validation-for="Historia" class="text-danger"></span>
				</div>
				 <div class="col-md-6">
                            <input type="file" name="imgDesarrollador" class="form-control" multiple />
                        </div>

				<div class="form-group">
					<input type="submit" value="Crear Publicadora" class="btn btn-primary" />
				</div>
			</form>
		</div>
	</div>
</div>
@*Validacion lado cliente*@
	@section Scripts{

			@{ <partial name="_ValidationScriptsPartial" />
		}
}
